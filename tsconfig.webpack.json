{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": false,
        "checkJs": false,
        "allowJs": false,
        "outDir": "./",
        "module": "CommonJS",
        "target": "ES5",
        "moduleResolution": "node",
        "rootDir": "./",
        "listEmittedFiles": true,
        "pretty": true,
        "noEmitOnError": true,
        "noErrorTruncation": true,
        "esModuleInterop": true,
        "downlevelIteration": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "webpack.config.ts"
    ],
    "exclude": [ 
      "./node_modules",
      "./*/**/*.ts" 
    ],
    "typeAcquisition": {
        "enable": true
    },
}
